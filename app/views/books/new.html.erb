<h1>Add new book</h1>

<%= form_for :book,  url: books_url do |f| %>
<p><label for = "book_book_name">Book Name</label>:

<%= f.text_field :book_name %></p>
<p><label for = "book_author">Author</label>:

<%= f.text_field :author %></p>

<p><label for = "book_publisher">Publisher</label><br/>

<%= f.text_field :publisher %></p>

<p><label for = "book_bill_number">Bill Number</label><br/>

<%= f.text_field :bill_number %></p>

<p><label for = "date_of_publishing">Date Of Publishing</label><br/>

<%= f.text_field :date_of_publishing %></p>

<p><label for = "book_edition">Edition</label><br/>

<%= f.text_field :edition %></p>

<p><label for = "book_price">Price</label><br/>

<%= f.text_field :price %></p>
  
<button type="submit" > Save</button>

<% end %>

